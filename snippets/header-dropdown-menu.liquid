{% comment %}
  Renders a standard dropdown style menu for the header.

  Usage:
  {% render 'header-dropdown-menu' %}
{% endcomment %}

<nav class="header__inline-menu relative">
  <ul class="list-menu list-menu--inline flex space-x-6 color-{{ section.settings.menu_color_scheme }}" role="list">
    {%- for link in section.settings.menu.links -%}
      <li class="relative group">
        <a
          href="{{ link.url }}"
          class="header__menu-item list-menu__item link focus-inset group-hover:text-blue-500 px-4 py-2 block"
        >
          {{- link.title | escape -}}
        </a>

        {%- if link.links != blank -%}
          <!-- First Level Dropdown -->
          <ul
            class="absolute left-0 top-full hidden group-hover:block bg-white shadow-lg rounded-md py-2 w-48 transition-opacity duration-300 opacity-0 group-hover:opacity-100"
          >
            {%- for childlink in link.links -%}
              <li class="relative group">
                <a
                  href="{{ childlink.url }}"
                  class="block px-4 py-2 text-gray-700 hover:bg-gray-100 flex justify-between"
                >
                  {{ childlink.title | escape }}
                  {%- if childlink.links != blank -%}
                    <span>â–¶</span>
                  {%- endif -%}
                </a>

                {%- if childlink.links != blank -%}
                  <!-- Second Level Dropdown -->
                  <ul
                    class="absolute left-full top-0 hidden group-hover:block bg-white shadow-lg rounded-md py-2 w-48 transition-opacity duration-300 opacity-0 group-hover:opacity-100"
                  >
                    {%- for grandchildlink in childlink.links -%}
                      <li>
                        <a
                          href="{{ grandchildlink.url }}"
                          class="block px-4 py-2 text-gray-700 hover:bg-gray-100"
                        >
                          {{ grandchildlink.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
