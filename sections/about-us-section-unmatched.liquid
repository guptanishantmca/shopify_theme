  "name": "About Unmatched Service",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Unmatched Service & Expertise"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p><span>Our commitment to exceptional customer service sets us apart...</span></p><p><span>We proudly offer products from the finest manufacturers...</span></p><p><span>Whether youâ€™re looking to install a new fireplace...</span></p>"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        { "value": "left", "label": "Left Side" },
        { "value": "right", "label": "Right Side" }
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Background Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Unmatched"
    }
  ]
}
{% endschema %}
