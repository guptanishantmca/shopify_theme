<section
  class="custom-full-section fadeIn"
  style="
    background-image:url({{ section.settings.image | img_url: 'master' }});background-position:
    center center;
      background-repeat: no-repeat;
      background-size: cover;
  "
>
  <div class="custom-elementor-container">
    <!-- Column 1: Text content -->
    <div class="custom-column fadeInLeft">
      <div class="custom-widget-wrap white-text">
        <h2 class="  white-text">{{ section.settings.heading }}</h2>
        <div class="rte white-text">{{ section.settings.description }}</div>
      </div>
    </div>

    <!-- Column 2: Empty (or could hold an image later) -->
    <div class="custom-column fadeInRight">
      <!-- Optional future content -->
    </div>
  </div>
</section>

<style>
  .custom-full-section {
    width: 100%;

    background-color: #1a1a1a; /* Dark background for white text */
  }

  .custom-elementor-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0;
    max-width: 1600px;
    margin: 0 auto;
  }

  .custom-column {
    width: 100%;
    padding: 20px;
  }

  @media (min-width: 768px) {
    .custom-column {
      width: 50%;
    }
  }

  .white-text {
    color: #ffffff;
  }

  /* Simple fade animations */
  .fadeIn {
    animation: fadeIn 1s ease-in-out;
  }

  .fadeInLeft {
    animation: fadeInLeft 1s ease-in-out;
    background-color: #00000085;
  }

  .fadeInRight {
    animation: fadeInRight 1s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

