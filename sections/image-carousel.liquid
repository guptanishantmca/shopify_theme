<section class="custom-carousel-section">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="Slide Image">
        </div>
      {% endfor %}
    </div>

    <!-- Navigation buttons -->
    <div class="swiper-button-next">&nbsp;</div>
    <div class="swiper-button-prev">&nbsp;</div>

    <!-- Pagination dots (optional, can be removed) -->
    {% comment %} <div class="swiper-pagination"></div> {% endcomment %}
  </div>
</section>

<!-- Swiper CSS -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
>
<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<style>
  .custom-carousel-section {
    max-width: 1600px;
    margin: 0 auto;
  }

  .swiper {
    width: 100%;
    {% comment %} height: 300px; /* adjust as needed */ {% endcomment %}
  }

  .swiper-slide img {
    {% comment %} width: 100%;
    height: 100%; {% endcomment %}
  }
  .swiper-button-next,.swiper-button-prev{
    color: #FFFFFF !important;
    background-color: #FA1431 !important;
    width: 30px;
  height: 30px;
  text-align: center;
  line-height: 22px;
  margin: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper', {
      slidesPerView: 5, // ⭐ Show 5 slides at a time
      spaceBetween: 20, // ⭐ Space between slides (px)
      loop: true, // ⭐ Enable continuous loop
      autoplay: {
        delay: 3000, // ⭐ Auto-slide every 3 seconds
        disableOnInteraction: false, // ⭐ Keep autoplay after interaction
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      breakpoints: {
        // ⭐ Responsive adjustments
        0: { slidesPerView: 1 },
        480: { slidesPerView: 2 },
        768: { slidesPerView: 3 },
        1024: { slidesPerView: 4 },
        1280: { slidesPerView: 5 },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Image Carousel",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}
