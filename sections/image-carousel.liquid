<section class="brand-carousel-section">
  <!-- Heading -->
  <div class="brand-carousel-heading">
    <h2>{{ section.settings.heading }}</h2>
  </div>

  <!-- Swiper carousel -->
  <div class="swiper brand-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="Brand Logo">
            </a>
          {% else %}
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="Brand Logo">
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- Navigation buttons -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</section>

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<style>
  .brand-carousel-section {
    background-color: #fff;
    padding: 50px 0;
    text-align: center;
  }

  .brand-carousel-heading h2 {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 30px;
    text-transform: uppercase;
    color: #333;
  }

  .brand-swiper {
    width: 100%;
    position: relative;
  }

  .brand-swiper .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .brand-swiper .swiper-slide img {
    max-width: 120px;
    height: auto;
    transition: transform 0.3s ease;
    object-fit: contain;
  }

  .brand-swiper .swiper-slide img:hover {
    transform: scale(1.1);
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: #000;
    background: rgba(255, 255, 255, 0.9);
    width: 35px;
    height: 35px;
    border-radius: 50%;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  .swiper-button-next::after,
  .swiper-button-prev::after {
    font-size: 14px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.brand-swiper', {
      slidesPerView: 5,
      spaceBetween: 30,
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        0: { slidesPerView: 2 },
        480: { slidesPerView: 3 },
        768: { slidesPerView: 4 },
        1024: { slidesPerView: 5 },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Brand Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "WE CARRY THE BEST BRANDS IN THE HEARTH INDUSTRY"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Brand Logo Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional Link (for logo)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}
